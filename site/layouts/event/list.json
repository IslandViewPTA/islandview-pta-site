{ {{ $eventCount := len .Pages }}
  "monthly": [{{range $index, $page := .Pages -}} {{ $c :=add $index 1 }}
    { 
        "id": {{ $c }},
        "name": "{{.Title}}",
        "description": "{{.Params.description}}",
        "postdate": "{{ dateFormat "2006-1-2" .Date }}",
        "startdate": "{{ dateFormat "2006-1-2" .Params.start }}",
        "starttime": "{{ dateFormat "15:04" .Params.start }}",{{with .Params.end}}
        "enddate": "{{ dateFormat "2006-1-2" . }}",
        "endtime": "{{ dateFormat "15:04" . }}",{{end}}
        "url": "{{ .RelPermalink }}"
    }{{if lt $c $eventCount}},{{ else }}{{end}}{{end}}
  ]
}